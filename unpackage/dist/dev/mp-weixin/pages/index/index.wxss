
.content {height: auto; width: 100%;}
.uni-list{width: 100%;}
.uni-list-cell{width: 100%; height: 160rpx; border-bottom: 1rpx solid #DDDDDD;}
.uni-media-list{width: 100%; height: 100%; margin: 3%;}
.uni-media-list-logo{width: 20%; height: 90%; float: left; border-radius: 10rpx;}
.uni-media-list-body{width: 74%; height: 90%; float: left; padding-left: 3%; padding-top: 2%;}
.uni-media-list-text-top{font-size: 1.0em; overflow: hidden; -o-text-overflow: ellipsis; text-overflow: ellipsis; white-space: nowrap;}
.uni-media-list-text-bottom{color: #DDDDDD; font-size: 0.9em; float: left; margin-top: 2%;}

